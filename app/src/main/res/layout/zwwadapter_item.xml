<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:id="@+id/zwwadapter_item_parent_layout">
    <!-- android:background="@drawable/center_item" -->
    <com.tencent.tmgp.jjzww.view.RoundRoomImageView
        android:id="@+id/moppet_image"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:src="@drawable/loading"
        />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginTop="155dp"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moppet_image"
        android:background="@drawable/zwwadapter_item_bottom_bg"
        >
        <TextView
            android:id="@+id/moppet_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:paddingBottom="5dp"
            tools:text="未知"
            android:textColor="#683B20"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/monet_image"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="11dp"
            android:layout_toLeftOf="@+id/moppet_money_tv"
            android:src="@drawable/ctrl_money_icon" />

        <TextView
            android:id="@+id/moppet_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="3dp"
            android:text="19"
            android:gravity="center"
            android:textColor="#683B20"
            android:textSize="12sp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        >
        <!-- android:background="@drawable/zww_adapter_item_topbg -->

        <ImageView
            android:id="@+id/moppet_connect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ctrl_idling_icon"
            android:visibility="gone"
            />

        <TextView
        android:id="@+id/moppet_connect_tv"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/moppet_connect_iv"
        tools:text="维护中"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/room_statue_sleep_bg"
            />
    </RelativeLayout>
</RelativeLayout>

