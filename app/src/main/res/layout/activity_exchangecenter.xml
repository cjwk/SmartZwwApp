<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/apptheme_bg">

        <ImageButton
            android:id="@+id/image_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="兑换中心"
            android:textColor="@color/white"
            android:textSize="18sp" />
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_circleborder"
        android:layout_margin="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推广码兑换\n输入好友给您的推广码"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:lineSpacingExtra="5dp"
            />

        <EditText
            android:id="@+id/exchangecenter_code_et"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:singleLine="true"
            android:maxLength="15"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/gary_border_corners"
            android:hint="输入推广码获取金币"
            android:textColorHint="@color/gray"
            />

        <Button
            android:id="@+id/myjoincode_submit_btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="提交"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_logout_btn_bg"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/myjoincode_myjoincode_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="输入邀请码"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_logout_btn_bg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:visibility="visible"
            />


    </LinearLayout>


</LinearLayout>
